<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SendMoneyFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:layout_marginHorizontal="40dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView5"
            android:layout_width="371dp"
            android:layout_height="wrap_content"
            android:layout_marginVertical="40dp"
            android:fontFamily="@font/nunitonsansblack"
            android:gravity="center"
            android:text="@string/send_money_text"
            android:textColor="@color/black"
            android:textSize="22dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="80dp"
            android:layout_marginBottom="45dp"
            android:orientation="vertical">
            <EditText
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:hint="Nom du bénéficiaire"
                android:textAllCaps="false"
                android:textSize="18dp"
                android:textColor="@color/gray"
                android:inputType="text"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:hint="Numéro wow du  bénéficiaire"
                android:textAllCaps="false"
                android:layout_marginVertical="3dp"
                android:textSize="18dp"
                android:textColor="@color/gray"
                android:inputType="phone"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:hint="Montant (minimum 1F)"
                android:textAllCaps="false"
                android:textSize="18dp"
                android:textColor="@color/gray"
                android:inputType="number"/>
        </LinearLayout>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/rounded_button"
            android:fontFamily="@font/nunitonsansregular"
            android:text="Envoyer"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="20dp" />

    </LinearLayout>

</FrameLayout>